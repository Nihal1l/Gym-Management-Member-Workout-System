# Heroku Environment Variables
# Copy these settings to Heroku config during deployment

# Django Settings
SECRET_KEY=your-super-secret-key-here-minimum-50-chars
DEBUG=False
ALLOWED_HOSTS=your-app-name.herokuapp.com,localhost

# Database (Auto-set by Heroku PostgreSQL addon)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-app-name.herokuapp.com,http://localhost:3000

# Optional: Email Configuration (for production alerts)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
